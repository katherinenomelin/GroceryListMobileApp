<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:background="#524e4e"
android:gravity="center"
android:layout_height="match_parent">


	<TextView
		android:layout_width="300dp"
		android:text="Register"
		android:textColor="#fafbff"
		android:gravity="center"
		android:textSize="30dp"
		android:textStyle="bold"
		android:layout_height="78.5dp"
		android:layout_marginTop="23.5dp" />


        <EditText
        android:layout_width="300dp"
        android:hint="Enter Name of User"
        android:textSize="14dp"
        android:background="#918e8e"
        android:id="@+id/nameofuserID"
        android:layout_height="40dp"
        android:drawablePadding="20dp"
        android:padding="8dp"
        />

        <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:hint="Enter Email"
        android:textSize="14dp"
        android:background="#918e8e"
        android:id="@+id/emailID"
        android:layout_height="40dp"
        android:drawablePadding="20dp"
        android:padding="8dp"/>

        <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:hint="Enter Phone Numeber"
        android:textSize="14dp"
        android:background="#918e8e"
        android:id="@+id/phonenumberID"
        android:layout_height="40dp"
        android:drawablePadding="20dp"
        android:padding="8dp"/>

        <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:hint="Enter your Age"
        android:textSize="14dp"
        android:background="#918e8e"
        android:id="@+id/ageID"
        android:layout_height="40dp"
        android:drawablePadding="20dp"
        android:padding="8dp"/>

        <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:hint="Enter Password"
        android:textSize="14dp"
        android:id="@+id/passwordID"
        android:background="#918e8e"
        android:layout_height="40dp"
        android:drawablePadding="20dp"
        android:padding="8dp"/>

        <Button
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Register"
        android:id="@+id/registerBtnID"
        android:textAllCaps="false"
        android:background="#f7d22a"/>

        <Button
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="LOGIN"
        android:id="@+id/returnBtnID"
        android:textAllCaps="false"
        android:background="#943"/>

</LinearLayout>
